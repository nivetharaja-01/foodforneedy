<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/neww"
    >

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/cpassword"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="83dp"
        android:ems="10"
        android:fontFamily="@font/montaga"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textColor="#FBFAFA"
        android:textColorHint="#FAF5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.697" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:text="SIGN UP"
        android:textColor="#320C0C"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <EditText
        android:id="@+id/password"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:ems="10"
        android:fontFamily="@font/montaga"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#EFE7E7"
        android:textColorHint="#FAF5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525" />

    <EditText
        android:id="@+id/email"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:ems="10"
        android:fontFamily="@font/montaga"
        android:hint="Enter your Email ID"
        android:inputType="textEmailAddress"
        android:textColor="#FAF6F6"
        android:textColorHint="#FAF5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <EditText
        android:id="@+id/name"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:fontFamily="@font/montaga"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="#F4F1F1"
        android:textColorHint="#FAF5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.374"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/orphanname"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:fontFamily="@font/montaga"
        android:hint="Enter orphanage name Name"
        android:inputType="textPersonName"
        android:textColor="#F6F5F5"
        android:textColorHint="#FAF5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montaga"
        android:text="Already have an Account? Sign in "
        android:textColor="#FAF6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837" />



</androidx.constraintlayout.widget.ConstraintLayout>